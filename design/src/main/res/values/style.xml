<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tool="http://schemas.android.com/apk/res-auto">
    <!-- bottom navigation -->
    <style name="style_bottom_navigation" parent="Widget.Design.BottomNavigationView">
        <item name="backgroundTint">@color/white</item>
        <item name="itemIconTint">@color/selector_menu_bottom_color</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <!-- seek bar -->
    <style name="style_seekbar">
        <item name="android:progressDrawable">@color/white</item>
        <item name="android:thumb">@drawable/ic_seekbar_thumb</item>
    </style>

    <!-- check box -->
    <style name="style_checkbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/grey_200</item>
        <item name="android:colorControlActivated">@color/blue_400</item>
        <item name="android:colorControlHighlight">@color/blue_400</item>
        <item name="buttonTint">@color/color_check_box</item>
    </style>

    <!-- dialog -->
    <style name="style_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <!-- bottom sheet dialog -->
    <style name="style_transparent_bottom_sheet_dialog_fragment" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/style_transparent_bottom_sheet_dialog_fragment_child</item>
    </style>

    <style name="style_transparent_bottom_sheet_dialog_fragment_child" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">#00000000</item>
    </style>
</resources>